<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:screenOrientation">landscape</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:configChanges">keyboardHidden|orientation</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden</item>
        <item name="editTextStyle">@style/EditTextStyle.Alignment</item>
        <item name="android:textViewStyle">@style/TextViewStyle.TextDirection</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/launch_bg</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="myDropTheme" parent="Widget.AppCompat.DropDownItem.Spinner">
        <item name="android:textColor">@color/new_text5</item>
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="EditTextStyle.Alignment" parent="@android:style/Widget.EditText">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:gravity">start</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="TextViewStyle.TextDirection" parent="android:Widget.TextView">
        <item name="android:textDirection">locale</item>
    </style>

    <style name="text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text</item>
    </style>

    <style name="TextAppearance.Design.Tab" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">@dimen/text</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="list_item_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/list_item_text</item>
    </style>

    <style name="list_tile_text">
        <item name="android:textColor">@color/new_text4</item>
        <item name="android:textSize">@dimen/list_title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_tax_itam">
        <item name="android:textColor">@color/new_text4</item>
        <item name="android:textSize">@dimen/list_title_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_all">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_all_size</item>
    </style>

    <style name="text_24_1d">
        <item name="android:textColor">@color/new_text4</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>

    <style name="text_24_83">
        <item name="android:textColor">@color/new_text5</item>
        <item name="android:textSize">@dimen/text_24</item>
    </style>

    <style name="text_30_1d">
        <item name="android:textColor">@color/new_text4</item>
        <item name="android:textSize">@dimen/text_30</item>
    </style>

    <style name="text_30_83">
        <item name="android:textColor">@color/new_text5</item>
        <item name="android:textSize">@dimen/text_30</item>
    </style>

    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- Active thumb color & Active track color(30% transparency) switch 打开时的拇指按钮的颜色 轨迹颜色默认为30%这个颜色 -->
        <item name="colorControlActivated">@color/blue1</item>

        <!-- Inactive thumb color switch关闭时的拇指按钮的颜色 -->
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>

        <!-- Inactive track color(30% transparency) switch关闭时的轨迹的颜色 30%这个颜色 -->
        <item name="android:colorForeground">@android:color/darker_gray</item>

        <!--使用方法：  在布局文件中给需要自定义控件中增加 android:theme="@style/MySwitch"
                       如果是 SwitchCompat 控件，则是增加 app:theme="@style/MySwitch"     -->
    </style>

    <!--自定义Dialog背景全透明无边框theme-->
    <style name="SlideDialog" parent="@android:style/Theme.Holo.Dialog">
        <!--背景颜色和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题-->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="DatePickerDialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/com_ycuwq_datepicker_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/com_ycuwq_datepicker_dialog_out</item>
    </style>

    <style name="ToolbarPopupTheme" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="android:colorBackground">@color/new_text</item>  <!-- 设置背景颜色-->
        <item name="overlapAnchor">false</item>  <!--设置不覆盖锚点-->
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="actionMenuTextColor">#000</item> <!--menu字体颜色-->
    </style>

</resources>
