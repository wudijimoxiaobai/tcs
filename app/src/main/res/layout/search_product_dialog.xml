<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/connect"
        android:layout_width="0.1dp"
        android:layout_height="0.1dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tltle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/search"
        android:textColor="@color/text1"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv1"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:text="@string/product_name"
        android:textColor="@color/text1"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tltle" />

    <EditText
        android:id="@+id/product_name"
        style="@style/list_item_text"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg2"
        android:gravity="start|center_vertical"
        android:hint="@string/please_input"
        android:maxLines="1"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv1"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:text="@string/local_name"
        android:textColor="@color/text1"
        android:textSize="18dp"
        app:layout_constraintLeft_toLeftOf="@id/tv1"
        app:layout_constraintTop_toBottomOf="@id/tv1" />

    <EditText
        android:id="@+id/local_name"
        style="@style/list_item_text"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/bg2"
        android:gravity="start|center_vertical"
        android:hint="@string/please_input"
        android:maxLines="1"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@id/tv2"
        app:layout_constraintLeft_toLeftOf="@id/product_name"
        app:layout_constraintLeft_toRightOf="@id/tv2"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg17"
        android:gravity="center"
        android:text="@string/cancel"
        android:textColor="@color/new_text4"
        android:textSize="@dimen/text"
        app:layout_constraintLeft_toRightOf="@id/connect"
        app:layout_constraintTop_toBottomOf="@id/local_name" />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/bg18"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="@dimen/text"
        app:layout_constraintRight_toLeftOf="@id/connect"
        app:layout_constraintTop_toBottomOf="@id/local_name" />
</android.support.constraint.ConstraintLayout>