<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_text"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_01"
        style="@style/text_24_83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/invoice_code"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invoice_code"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_01"
        app:layout_constraintLeft_toRightOf="@id/tv_01" />

    <TextView
        android:id="@+id/tv_02"
        style="@style/text_24_83"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/invoice_no"
        app:layout_constraintLeft_toLeftOf="@id/tv_01"
        app:layout_constraintRight_toRightOf="@id/tv_01"
        app:layout_constraintTop_toBottomOf="@id/tv_01" />

    <TextView
        android:id="@+id/invoice_no"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_02"
        app:layout_constraintLeft_toRightOf="@id/tv_02" />

    <TextView
        android:id="@+id/tv_03"
        style="@style/text_24_83"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/date_query_time"
        app:layout_constraintLeft_toLeftOf="@id/tv_02"
        app:layout_constraintRight_toRightOf="@id/tv_02"
        app:layout_constraintTop_toBottomOf="@id/tv_02" />

    <TextView
        android:id="@+id/issuing_date_time"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toRightOf="@id/tv_03" />

    <TextView
        android:id="@+id/tv_04"
        style="@style/text_24_83"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/amout"
        app:layout_constraintLeft_toLeftOf="@id/tv_03"
        app:layout_constraintRight_toRightOf="@id/tv_03"
        app:layout_constraintTop_toBottomOf="@id/tv_03" />

    <TextView
        android:id="@+id/tax_Amount"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_04"
        app:layout_constraintLeft_toRightOf="@id/tv_04" />

    <View
        android:id="@+id/v_01"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginRight="80dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_04"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_01" />

    <ImageView
        android:id="@+id/upload_status"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toRightOf="@id/v_01"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_02" />

</android.support.constraint.ConstraintLayout>