<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:background="@drawable/bg10"
        android:padding="15dp"
        >

        <TextView
            android:id="@+id/cancel"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableStart="@mipmap/cancel"
            android:gravity="center_vertical"
            android:text="@string/cancel"
            android:textColor="@color/text2"
            />


        <TextView
            android:id="@+id/title"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/add_product"
            android:textColor="@color/text2"
            android:textSize="25sp"
            />


        <TextView
            android:id="@+id/save"
            style="@style/text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingStart="15dp"
            android:text="@string/save"
            android:textColor="@color/text2"
            />

    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg12"
        android:paddingBottom="30dp"
        android:paddingTop="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/top_bg"
            android:orientation="vertical"
            android:padding="30dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/product_name"
                    />

                <EditText
                    android:id="@+id/product_name"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"
                    android:text="@string/local_name"
                    />

                <EditText
                    android:id="@+id/local_name"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/unit"
                    />

                <EditText
                    android:id="@+id/unit"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/price"
                    />

                <EditText
                    android:id="@+id/price"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.345"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/percentage"
                    />

                <EditText
                    android:id="@+id/percentage"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/fixed_amount"
                    />

                <EditText
                    android:id="@+id/fixed_amount"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:inputType="numberDecimal"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/purchase"
                    />

                <EditText
                    android:id="@+id/purchase"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/commission"
                    />

                <EditText
                    android:id="@+id/commission"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/adjustment"
                    />

                <EditText
                    android:id="@+id/adjustment"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_input"
                    android:imeOptions="flagNavigateNext"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/related_tax_items"
                    />

                <TextView
                    android:id="@+id/related_tax_items"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:drawableEnd="@mipmap/tin"
                    android:gravity="start|center_vertical"
                    android:hint="@string/please_select"
                    android:minHeight="50dp"
                    android:padding="10dp"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                >

                <TextView
                    style="@style/list_tile_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:padding="10dp"

                    android:text="@string/specification"
                    />

                <EditText
                    android:id="@+id/specification"
                    style="@style/list_item_text"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="0.34"
                    android:background="@drawable/edit_bg"
                    android:gravity="start|top"
                    android:hint="@string/please_input"
                    android:padding="10dp"
                    android:textCursorDrawable="@null"
                    />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>