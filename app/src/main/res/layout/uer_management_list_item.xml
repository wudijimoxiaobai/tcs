<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/new_text">

    <TextView
        android:id="@+id/product"
        style="@style/text_30_83"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="@string/name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/product"
        app:layout_constraintLeft_toRightOf="@id/product" />

    <TextView
        android:id="@+id/region"
        style="@style/text_30_83"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/role"
        app:layout_constraintLeft_toLeftOf="@id/product"
        app:layout_constraintTop_toBottomOf="@id/product" />

    <TextView
        android:id="@+id/address"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/region"
        app:layout_constraintLeft_toRightOf="@id/region" />

    <TextView
        android:id="@+id/tv_03"
        style="@style/text_30_83"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/address"
        app:layout_constraintLeft_toLeftOf="@id/region"
        app:layout_constraintTop_toBottomOf="@id/region" />

    <TextView
        android:id="@+id/role"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toRightOf="@id/tv_03" />


</android.support.constraint.ConstraintLayout>