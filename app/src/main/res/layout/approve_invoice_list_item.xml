<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_text"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_01"
        style="@style/text_24_83"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/invoice_no"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/invoice_no"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_01"
        app:layout_constraintLeft_toRightOf="@id/tv_01" />

    <TextView
        android:id="@+id/tv_02"
        style="@style/text_24_83"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/invoice_type"
        app:layout_constraintLeft_toLeftOf="@id/tv_01"
        app:layout_constraintRight_toRightOf="@id/tv_01"
        app:layout_constraintTop_toBottomOf="@id/tv_01" />

    <TextView
        android:id="@+id/request_type"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_02"
        app:layout_constraintLeft_toRightOf="@id/tv_02" />

    <TextView
        android:id="@+id/tv_03"
        style="@style/text_24_83"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/request_date"
        app:layout_constraintLeft_toLeftOf="@id/tv_02"
        app:layout_constraintRight_toRightOf="@id/tv_02"
        app:layout_constraintTop_toBottomOf="@id/tv_02" />

    <TextView
        android:id="@+id/request_date"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toRightOf="@id/tv_03" />

    <TextView
        android:id="@+id/tv_04"
        style="@style/text_24_83"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/request_by"
        app:layout_constraintLeft_toLeftOf="@id/tv_03"
        app:layout_constraintRight_toRightOf="@id/tv_03"
        app:layout_constraintTop_toBottomOf="@id/tv_03" />

    <TextView
        android:id="@+id/request_by"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_04"
        app:layout_constraintLeft_toRightOf="@id/tv_04" />

    <TextView
        android:id="@+id/tv_05"
        style="@style/text_24_83"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/status"
        app:layout_constraintLeft_toLeftOf="@id/tv_04"
        app:layout_constraintRight_toRightOf="@id/tv_04"
        app:layout_constraintTop_toBottomOf="@id/tv_04" />

    <TextView
        android:id="@+id/status"
        style="@style/text_24_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_05"
        app:layout_constraintLeft_toRightOf="@id/tv_05" />

</android.support.constraint.ConstraintLayout>