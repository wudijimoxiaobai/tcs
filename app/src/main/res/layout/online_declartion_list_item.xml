<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="58dp"
              android:background="@android:color/white"
              android:gravity="center_vertical"
              android:orientation="horizontal">

    <TextView
        android:id="@+id/invoice_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/invoice_deadline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/deadline_date_from"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/deadline_date_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text1"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/deadline_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/text1"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/action1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/declare"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/declare"
            android:textColor="@color/text1"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/action2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@mipmap/update"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/upload"
            android:textColor="@color/text1"
            android:textStyle="bold"
            />
    </LinearLayout>
</LinearLayout>