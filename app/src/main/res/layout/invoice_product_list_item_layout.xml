<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:background="@color/new_text">

    <TextView
        android:id="@+id/tv_01"
        style="@style/text_30_83"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:text="Item"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/no"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_01"
        app:layout_constraintLeft_toRightOf="@id/tv_01" />

    <TextView
        android:id="@+id/tv_02"
        style="@style/text_30_83"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/price_wu"
        app:layout_constraintLeft_toLeftOf="@id/tv_01"
        app:layout_constraintTop_toBottomOf="@id/tv_01" />

    <TextView
        android:id="@+id/price"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_02"
        app:layout_constraintLeft_toRightOf="@id/tv_02" />

    <TextView
        android:id="@+id/tv_03"
        style="@style/text_30_83"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="@string/qty"
        app:layout_constraintLeft_toLeftOf="@id/tv_02"
        app:layout_constraintTop_toBottomOf="@id/tv_02" />

    <TextView
        android:id="@+id/qty"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toRightOf="@id/tv_03" />

    <TextView
        android:id="@+id/tv_04"
        style="@style/text_30_83"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Tax"
        app:layout_constraintLeft_toLeftOf="@id/tv_03"
        app:layout_constraintTop_toBottomOf="@id/tv_03" />

    <TextView
        android:id="@+id/amount"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_04"
        app:layout_constraintLeft_toRightOf="@id/tv_04" />

    <TextView
        android:id="@+id/tv_05"
        style="@style/text_30_83"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:text="Total"
        app:layout_constraintBottom_toBottomOf="@id/tv_02"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_02" />

    <TextView
        android:id="@+id/all_price"
        style="@style/text_30_1d"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/tv_03"
        app:layout_constraintLeft_toLeftOf="@id/tv_05"
        app:layout_constraintTop_toTopOf="@id/tv_03" />

    <View
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginRight="20dp"
        android:background="@color/new_text3"
        app:layout_constraintBottom_toBottomOf="@id/tv_04"
        app:layout_constraintRight_toLeftOf="@id/tv_05"
        app:layout_constraintTop_toTopOf="@id/tv_01" />

</android.support.constraint.ConstraintLayout>