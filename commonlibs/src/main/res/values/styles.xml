<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.PatternView" parent="">
        <item name="pl_aspect">square</item>
    </style>

    <style name="PatternView" parent="Base.PatternView">
        <item name="pl_regularColor">?colorControlNormal</item>
        <item name="pl_errorColor">#fff4511e</item>
        <item name="pl_successColor">?colorControlActivated</item>
    </style>

    <style name="PatternView.Light" parent="Base.PatternView">
        <item name="pl_regularColor">?colorControlNormal</item>
        <item name="pl_errorColor">#fff4511e</item>
        <item name="pl_successColor">?colorControlActivated</item>
    </style>

    <style name="dialog_theme" parent="base_dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden</item>
    </style>

    <style name="dialog_theme1" parent="base_dialog">
        <item name="android:hardwareAccelerated">true</item>
        <item name="android:windowSoftInputMode">adjustPan|stateAlwaysHidden</item>
    </style>

    <style name="dialog_theme2" parent="base_dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="dialog_theme3" parent="base_dialog">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowSoftInputMode">stateAlwaysHidden|adjustPan</item>
    </style>

    <style name="base_dialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFrame">@null</item>
        <!--边框-->
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsTranslucent">true</item>
        <!--半透明-->
        <item name="android:windowNoTitle">true</item>
        <!--无标题-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--背景透明-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--模糊-->
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--话框动画样式-->
    <style name="monitor_search_dialog_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/right_edge_enter</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/right_edge_exit</item>
        //退出时的动画
    </style>

    <!--话框动画样式-->
    <style name="search_dialog_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/top_edge_enter</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/top_edge_exit</item>
        //退出时的动画
    </style>
    <!--话框底部动画样式-->
    <style name="dialog_bottom_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/bottom_edge_enter</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/bottom_edge_exit</item>
        //退出时的动画
    </style>
   <!--缩放动画样式-->
    <style name="scale_anim" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/scale_enter</item>
        //进入时的动画
        <item name="@android:windowExitAnimation">@anim/scale_exit</item>
        //退出时的动画
    </style>

    <style name="activity_title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>